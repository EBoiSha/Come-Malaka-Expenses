%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)), html: {'data-abide': true} do |f|
  = devise_error_messages!
  %fieldset
    %legend Sign up user
    .field
      = f.label :first_name
      = f.text_field :first_name, required: true
      %small.error Please type in your first name.
    .field
      = f.label :last_name
      = f.text_field :last_name, required: true
      %small.error Please type in your last name.
    .field
      = f.label :email
      = f.email_field :email, autofocus: true, required: true, pattern: :email
      %small.error Please type in a valid email.
    .field.password-field
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", required: true
    .field.password-confirmation-field
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", required: true, "data-equalto": :user_password
      %small.error Password did not match or password length less than 8 characters.
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
