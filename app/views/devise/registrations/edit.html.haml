= link_to "Back", :back
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, 'data-abide': true, novalidate: true }) do |f|
  .row
    .small-12.medium-8.large-6.columns.small-centered
      %fieldset
        %legend Edit #{resource_name.to_s.humanize}
        .row
          .field.small-12.medium-4.large-4.columns.end
            = f.label :first_name
          .small-12.medium-8.large-8.columns.end
            = f.text_field :first_name
        .row
          .field.small-12.medium-4.large-4.columns.end
            = f.label :last_name
          .small-12.medium-8.large-8.columns.end
            = f.text_field :last_name
        .row
          .field.small-12.medium-4.large-4.columns.end
            = f.label :email
          .small-12.medium-8.large-8.columns.end
            = f.email_field :email, autofocus: true, required: true, pattern: :email
            %small.error A valid email is required.
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
        .row
          .field.password-field.small-12.medium-4.large-4.columns.end
            = f.label :password
          .password-field.small-12.medium-8.large-8.columns.end
            = f.password_field :password, autocomplete: "off", placeholder: "(leave blank if you don't want to change it)"
            %small.error Password length must be at least 8 characters.
        .row
          .field.password-confirmation-field.small-12.medium-4.large-4.columns.end
            = f.label :password_confirmation
          .password-confirmation-field.small-12.medium-8.large-8.columns.end
            = f.password_field :password_confirmation, autocomplete: "off"
            %small.error Password did not match.
        .row
          .field.small-12.medium-4.large-4.columns.end
            = f.label :current_password
          .small-12.medium-8.large-8.columns.end
            = f.password_field :current_password, autocomplete: "off", placeholder: "(we need your current password to confirm your changes)", "data-equalto": :user_password
        .row
          .field.small-12.medium-4.large-4.columns.end
            &nbsp;
          .actions.small-12.medium-8.large-8.columns.end
            = f.submit "Update"
.row
  .small-12.medium-8.large-6.columns.small-centered
    %fieldset
      %legend Cancel my account
      .row
        .small-12.medium-4.large-4.columns.end
          Unhappy?
        .small-12.medium-8.large-8.columns.end
          = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete
