= form_for(resource, as: resource_name, url: session_path(resource_name), html: { 'data-abide': true, novalidate: true }) do |f|
  %fieldset
    %legend Log in
    .field
      = f.label :email
      = f.email_field :email, autofocus: true, required: true
      %small.error Email is required for login.
    .field
      = f.label :password
      = f.password_field :password, autocomplete: "off", required: true
      %small.error Password is required for login.
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "Log in"
= render "devise/shared/links"
