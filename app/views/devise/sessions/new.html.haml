= form_for(resource, as: resource_name, url: session_path(resource_name), html: { 'data-abide': true, novalidate: true }) do |f|
  .row
    .small-12.medium-8.large-6.columns.small-centered
      %fieldset
        %legend Log in
        .row
          .field.small-12.medium-4.large-4.columns.end
            = f.label :email
          .small-12.medium-8.large-8.columns.end
            = f.email_field :email, autofocus: true, required: true
            %small.error Email is required for login.
          .field.small-12.medium-4.large-4.columns.end
            = f.label :password
          .small-12.medium-8.large-8.columns.end
            = f.password_field :password, autocomplete: "off", required: true
            %small.error Password is required for login.
          .field.small-12.medium-4.large-4.columns.end
            &nbsp;
          .small-12.medium-8.large-8.columns.end
            - if devise_mapping.rememberable?
              = f.check_box :remember_me
              = f.label :remember_me
          .field.small-12.medium-4.large-4.columns.end
            &nbsp;
          .actions.small-12.medium-8.large-4.columns.end
            = f.submit "Log in"
= render "devise/shared/links"
