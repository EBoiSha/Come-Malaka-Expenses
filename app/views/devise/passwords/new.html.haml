= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, 'data-abide': true, novalidate: true }) do |f|
	= devise_error_messages!
	.row
		.small-12.medium-8.large-6.columns.small-centered
			%fieldset
				%legend Forgot your password?
				.row
					.field.small-12.medium-4.large-4.columns.end
						= f.label :email
					.small-12.medium-8.large-8.columns.end
						= f.email_field :email, autofocus: true, required: true, pattern: :email
						%small.error Please type in a valid email.
				.row
          .field.small-12.medium-4.large-4.columns.end
          	&nbsp;
					.actions.small-12.medium-8.large-8.columns.end
						= f.submit "Send me reset password instructions"
= render "devise/shared/links"
