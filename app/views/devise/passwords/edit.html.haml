%h2 Change your password
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, 'data-abide': true }) do |f|
  = devise_error_messages!
  %fieldset
    %legend Change your password
    = f.hidden_field :reset_password_token
    .field.password-field
      = f.label :password, "New password"
      = f.password_field :password, autofocus: true, autocomplete: "off", required: true
    .field.password-confirmation-field
      = f.label :password_confirmation, "Confirm new password"
      = f.password_field :password_confirmation, autocomplete: "off", required: true, "data-equalto": :user_password
      %small.error Password did not match or password length less than 8 characters.
    .actions
      = f.submit "Change my password"
= render "devise/shared/links"
