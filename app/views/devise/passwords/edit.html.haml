= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, 'data-abide': true, novalidate: true }) do |f|
  .row
    .small-12.medium-8.large-6.columns.small-centered
      %fieldset
        %legend Change your password
        = f.hidden_field :reset_password_token
        .row
          .field.password-field.small-12.medium-4.large-4.columns.end
            = f.label :password, "New password"
          .password-field.small-12.medium-8.large-8.columns.end
            = f.password_field :password, autofocus: true, autocomplete: "off", required: true
            %small.error Password length must be at least 8 characters.
        .row
          .field.password-confirmation-field.small-12.medium-4.large-4.columns.end
            = f.label :password_confirmation, "Confirm new password"
          .password-confirmation-field.small-12.medium-8.large-8.columns.end
            = f.password_field :password_confirmation, autocomplete: "off", required: true, "data-equalto": :user_password
            %small.error Password did not match.
        .row
          .field.small-12.medium-4.large-4.columns.end
            &nbsp;
          .actions.small-12.medium-8.large-8.columns.end
            = f.submit "Change my password"
= render "devise/shared/links"
