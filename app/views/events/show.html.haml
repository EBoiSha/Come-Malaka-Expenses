%h2 Event details
%p Name: #{@event.name}
%p Description: #{@event.description}
%p From date: #{@event.from_date}
%p To Date: #{@event.to_date}
%p Event currency: #{@event.event_currency}
%p Organizer: #{@event.organizer}
%p Participants: #{@event.users.map { |u| u.name }.join(", ") }
%p Back to #{link_to 'Your events', events_path}