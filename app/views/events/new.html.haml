%h2 Describe the event
%p= link_to 'Back to events page', events_path

- if @event.errors.any?
  %div#error_explanation
    %p #{pluralize(@event.errors.count, "error")} prevented this event from being saved:
    %ul
    - @event.errors.full_messages.each do |msg|
      %li= msg
%br/

= form_for(@event) do |f|
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :from_date
    %br/
    = f.date_field :from_date, size: 10
  .field
    = f.label :end_date
    %br/
    = f.date_field :end_date, size: 10
    %br/
    = f.label :event_currency
    %br/
    = f.select :event_currency, options_from_collection_for_select(Money::Currency.all, :id, :iso_code), prompt: "Select event currency"
    %br/
    = f.hidden_field :organizer_id
    %br/
    .actions
    = f.submit "Create event"
