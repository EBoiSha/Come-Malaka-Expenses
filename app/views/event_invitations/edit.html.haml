%h2= t 'devise.invitations.edit.header'
= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, 'data-abide': true } do |f|
  = devise_error_messages!
  = f.hidden_field :invitation_token
  %fieldset
    %legend Set your password
    .field.password-field
      = f.label :password
      = f.password_field :password, required: true
    .field.password-confirmation-field
      = f.label :password_confirmation
      = f.password_field :password_confirmation, required: true, "data-equalto": :user_password
      %small.error Password did not match or password length less than 8 characters.
  .actions
    = f.submit t("devise.invitations.edit.submit_button")
