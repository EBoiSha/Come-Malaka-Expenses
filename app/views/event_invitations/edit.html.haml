= content_for :title, "Accept invitation to " + resource.event.name + " event"
= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, 'data-abide': true, novalidate: true } do |f|
  = devise_error_messages!
  = f.hidden_field :invitation_token
  .row
    .small-12.medium-8.large-6.columns.small-centered
      %fieldset
        %legend Set your password
        .row
          .field.password-field.small-12.medium-4.large-4.columns.end
            = f.label :password
          .password-field.small-12.medium-8.large-8.columns.end
            = f.password_field :password, required: true
            %small.error Password length must be at least 8 characters.
        .row
          .field.password-confirmation-field.small-12.medium-4.large-4.columns.end
            = f.label :password_confirmation
          .password-confirmation-field.small-12.medium-8.large-8.columns.end
            = f.password_field :password_confirmation, required: true, novalidate: true, "data-equalto": :user_password
            %small.error Password did not match.
        .row
          .field.small-12.medium-4.large-4.columns.end
            &nbsp;
          .actions.small-12.medium-8.large-8.columns.end
            = f.submit t("devise.invitations.edit.submit_button")
